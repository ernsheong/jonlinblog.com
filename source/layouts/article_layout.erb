<% wrap_layout :layout do %>
  <div class="article-full markdown">
    <article>
      <h1 class="title"><%= current_article.title %></h1>
      <div class="date"><%= current_article.date.strftime('%b %e, %Y') %></div>

    <div class="text">
      <%= yield %>
    </div>

    </article>
    <div class="tags mt-8">
      <% current_article.tags.each do |tag| %>
        <button class="p-2 border text-gray-400 hover:bg-gray-200 text-sm" type="button"><%= link_to tag, "/tags/#{tag.downcase}" %></button>
      <% end %>
    </div>
  </div>
<% end %>
